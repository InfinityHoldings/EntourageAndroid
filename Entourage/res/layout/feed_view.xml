<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:i="http://schemas.android.com/apk/res/com.infinity.entourage"
    android:id="@+id/city_card"
    android:layout_width="fill_parent"
    android:layout_height="100dp"
    card_view:cardElevation="4dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.infinity.views.CircularImageView
            android:id="@+id/feedPic"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:src="@drawable/owl3"
            i:hasShadow="true" />

        <TextView
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="category"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:layout_toRightOf="@id/feedPic" />

        <TextView
            android:id="@+id/contentType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="contentType"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:layout_below="@id/feedPic" />

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="content"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:layout_toRightOf="@id/contentType" />
    </RelativeLayout>

</android.support.v7.widget.CardView>